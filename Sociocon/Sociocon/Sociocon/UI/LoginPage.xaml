<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="0,20,0,0"
             x:Class="Sociocon.UI.LoginPage">

  <StackLayout
      HorizontalOptions="FillAndExpand"
      Padding="10, 10, 10, 0">
    <Label Text="SocioCon"
           FontAttributes="Bold"
           FontSize="Large"
           HorizontalOptions="Center"/>

    <Entry
      Text="Username"
      HorizontalOptions="FillAndExpand" />
    
    <Entry
      Text="Password"
      IsPassword="True"
      HorizontalOptions="FillAndExpand" />

    
    <Button
      Text="Login"
      WidthRequest="100"
      HorizontalOptions="End" />
  </StackLayout>
</ContentPage>